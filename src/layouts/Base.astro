---
export interface Props {
  title: string;
  description: string;
  canonical?: string;
  image?: string;
  type?: string;
  noindex?: boolean;
}

const { 
    title, 
    description, 
    canonical,
    image = 'https://erotikmaps.com/images/og-default.jpg',
    type = 'website',
    noindex = false
} = Astro.props;

const siteUrl = Astro.site?.toString().replace(/\/$/, '') || '';
const currentUrl = canonical || Astro.url.href;
const siteName = 'Moscow Erotic Massage üåç';
